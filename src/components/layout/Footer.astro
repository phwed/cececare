---
import { content } from "@constants/content";
---

<div class="bg-brand-700 flex flex-col justify-center">
  <div class="py-10 image relative flex justify-center">
    <div class="overlay z-10 inset-0 absolute"></div>
    <div
      class="w-11/12 md:w-10/12 lg:w-9/12 flex flex-col md:flex-row justify-center md:justify-between md:items-center flex-wrap gap-10 md:gap-0 relative z-10 px-5 lg:px-0"
    >
      <h1 class="text-2xl md:text-5xl font-bold text-white md:w-[30ch]">
        {content.footer.leading}
      </h1>
    </div>
  </div>

  <div
    class="w-11/12 md:w-10/12 lg:w-9/12 flex flex-col md:flex-row md:justify-between md:items-start gap-10 md:gap-10 py-16 self-center"
  >
    <div class="flex flex-col gap-2">
      <div class="flex items-center gap-8">
        <img
          src="/logo.svg"
          class="w-[10rem]"
        />

        <a
          href="https://www.cqc.org.uk/location/1-19677926659"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src="/assets/cqc.png"
            class="w-[15rem]"
          />
        </a>
      </div>
    </div>

    <div class="flex flex-col gap-4 text-white">
      <p class="text-bold text-xl md:text-2xl">Quick Links</p>

      <div class="flex flex-col">
        <a
          href="#"
          class="text-white hover:text-brand-400 transition-colors duration-200"
        >
          Home
        </a>

        <a
          href="#about-section"
          class="text-white hover:text-brand-400 transition-colors duration-200"
        >
          About Us
        </a>

        <a
          href="#about-section"
          class="text-white hover:text-brand-400 transition-colors duration-200"
        >
          Services
        </a>

        <a
          href="#about-section"
          class="text-white hover:text-brand-400 transition-colors duration-200"
        >
          Contact Us
        </a>
      </div>
    </div>

    <div class="flex flex-col gap-4 text-white">
      <p class="text-bold text-xl md:text-2xl">Get In Touch</p>

      <p>
        {content.footer.contact_descriptoin}
      </p>

      <div class="flex flex-col gap-3">
        <div class="flex gap-2 items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
            ></path>
          </svg>

          {content.footer.address}
        </div>

        <div class="flex gap-2 items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
            ></path>
          </svg>

          {content.footer.phone}
        </div>

        <div class="flex gap-2 items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
            ></path>
          </svg>

          {content.footer.phone2}
        </div>

        <div class="flex gap-2 items-center">
          <div class="flex gap-3 items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
              ></path>
            </svg>

            {content.footer.email}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="w-11/12 md:w-10/12 lg:w-9/12 border-t-2 border-brand-400 self-center py-5"
  >
    <p class="text-center text-sm font-light text-white">
      {content.footer.copyright}
    </p>
  </div>
</div>

