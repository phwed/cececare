---
import { content } from "@constants/content";
import Main from "@components/container/Main.astro";
import Section from "@components/container/Section.astro";
---

<Main
  id="about-section"
  className="mt-[35vh] md:mt-[25vh] lg:mt-[15vh] mb-10 py-10"
>
  <Section className="">
    <div class="w-full lg:w-6/12 flex justify-start">
      <img
        src="https://tykit.rometheme.pro/seniorsy/wp-content/uploads/sites/78/2022/08/caregiver-assist-senior-woman-at-home-2021-08-30-08-38-14-utc.jpg"
        class="rounded-2xl w-[100%] md:w-[90%] md:h-[35rem] object-cover object-center]"
      />
    </div>

    <div class="w-full lg:w-6/12 flex flex-col justify-center mt-8 lg:mt-0">
      <h1 class="text-brand-600 text-xl md:text-2xl mb-2">
        {content.welcome.title}
      </h1>

      <p>
        {content.welcome.about_us}
      </p>

      <h1 class="text-brand-600 text-xl md:text-2xl mb-2 mt-5">
        {content.welcome.mission}
      </h1>

      <p>
        {content.welcome.mission_statement}
      </p>

      <h1 class="text-brand-600 text-xl md:text-2xl mb-2 mt-5">
        {content.welcome.vision}
      </h1>

      <p>
        {content.welcome.vision_statement}
      </p>

