---
import Main from "../container/Main.astro";
import { content } from "@/constants/content";
import ContactForm from "@/components/react/ContactForm.tsx";
---

<Main id="contact-section" className=" bg-neutral-100 mt-[7vh]  py-10">
  <div
    class="w-11/12 lg:w-9/12 flex flex-col lg:flex-row rounded-lg gap-10 lg:gap-0"
  >
    <div
      class="w-full lg:w-6/12 overflow-clip min-h-[10rem] lg:pr-10 flex flex-col justify-center  gap-8"
    >
      <p class="text-brand-600 text-xl md:text-2xl">
        {content.contact.title}
      </p>

      <h1 class="text-3xl md:text-5xl font-bold">
        {content.contact.header}
      </h1>

      {
        content.contact.steps.map((item, index) => (
          <div class="flex flex-row gap-5 items-start">
            <span class="px-5 py-2 rounded-lg bg-brand-500 text-white text-xl">
              {index + 1}
            </span>

            <div class="flex flex-col gap-2">
              <p class="text-xl md:text-2xl font-bold">{item.title}</p>
              <p class="text-sm text-neutral-500">{item.subtitle}</p>
            </div>
          </div>
        ))
      }
    </div>

    <div
      class="bg-brand-500 p-10 w-full lg:w-6/12 overflow-clip min-h-[10rem] rounded-xl"
    >
      <ContactForm client:load />
    </div>
  </div>
</Main>
