---
import { content } from "@constants/content";
import Main from "@components/container/Main.astro";
import Section from "@components/container/Section.astro";
---

<Main id="info-section" className="py-20 md:py-20 mb-10 md:mb:2">
  <div   class="w-11/12  lg:w-9/12 flex flex-col lg:flex-row rounded-lg  gap-10 lg:gap-0">
    <div class="w-full lg:w-6/12 flex flex-col justify-center gap-7 md:pr-10">
      <p class="text-brand-600 text-xl md:text-2xl">{content.why.title}</p>

      <h1 class="text-3xl md:text-5xl font-bold">
        {content.why.header}
      </h1>

      <div class="flex flex-col md:flex-row gap-5 items-start lg:items-center">
        <div
          class="bg-brand-500 px-6 py-10 rounded-lg flex flex-col items-center gap-5"
        >
          <div class="p-5 bg-white rounded-full">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="blue"
              class="w-10 h-10"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              ></path>
            </svg>
          </div>

          <p
            class="text-center text-xl text-white w-[20ch] md:w-[15ch] font-bold"
          >
            {content.why.call}
          </p>

          <a
            href={content.why.phoneLink}
            class="text-white text-xl"
          >
            {content.why.phone}
          </a>
        </div>
        <div class="flex flex-col gap-6 col-auto">
          <p>
            {content.why.subtitle}
          </p>

          <div class="flex flex-col gap-2">
            {
              content.why.points.map((item) => (
                <div class="w-full flex gap-3 items-start">
                  <div class="px-[1.5px] mt-[2.3px] bg-brand-500 rounded-sm">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="white"
                      class="w-4 h-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                      />
                    </svg>
                  </div>

                  <p>{item}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <div class="w-full lg:w-6/12 flex justify-start items-center relative">
      <img
        src="https://tykit.rometheme.pro/seniorsy/wp-content/uploads/sites/78/2022/08/measuring-blood-pressure-2021-08-29-09-40-18-utc.jpg"
        class="rounded-2xl w-[100%] lg:w-[90%] md:h-[40rem] lg:h-[35rem] object-cover object-center]"
      />
      <div
        class="absolute bottom-[-50px] lg:bottom-[-30px] right-0 md:right-[10%] p-8 bg-brand-500 rounded-xl z-10"
      >
        <p class="text-lg md:text-xl w-[20ch] text-white">
          {content.why.slogan}
        </p>
      </div>
    </div>
  </div>
</Main>
